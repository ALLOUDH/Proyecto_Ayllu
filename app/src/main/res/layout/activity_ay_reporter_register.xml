<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_decolorated"
    tools:context=".Ay_reporter_register">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="134dp"
        android:gravity="center"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:layout_width="367dp"
        android:layout_height="181dp"
        android:src="@drawable/logo_ayllu"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/edt_Nombres_reporter"
            android:layout_marginTop="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres Completos"
            android:textColorHint="@color/purple_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_line"
            />

        <EditText
            android:id="@+id/edt_NroCelular_reporter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:hint="Numero de celular"
            android:textColorHint="@color/purple_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_line"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/Spinner_departamento_reporter"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/sort_down_icon"
                android:contextClickable="true"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                android:textColorHint="@color/purple_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtDepartamento_reporter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDepartamento_reporter"
                android:layout_width="304dp"
                android:layout_height="23dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edt_line"
                android:text="Departamento"
                android:textColor="@color/purple_text"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Spinner_departamento_reporter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/Spinner_provincia_reporter"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/sort_down_icon"
                android:contextClickable="true"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                android:textColorHint="@color/purple_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtProvincia_reporter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtProvincia_reporter"
                android:layout_width="304dp"
                android:layout_height="23dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edt_line"
                android:text="Provincia"
                android:textColor="@color/purple_text"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Spinner_provincia_reporter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/Spinner_distrito_reporter"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/sort_down_icon"
                android:contextClickable="true"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                android:textColorHint="@color/purple_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtDistrito_reporter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDistrito_reporter"
                android:layout_width="304dp"
                android:layout_height="23dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edt_line"
                android:text="Distrito"
                android:textColor="@color/purple_text"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Spinner_distrito_reporter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_Registrar_Reporter"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_bg"
            android:text="Guardar y continuar"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>