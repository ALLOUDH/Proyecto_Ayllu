<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarContrasena.Ay_Contra_recup"
    android:background="@color/white_decolorated">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="134dp"
        android:gravity="center"
        android:text="Recupera tu contraseÃ±a"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:layout_width="367dp"
        android:layout_height="181dp"
        android:src="@drawable/logo_ayllu"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGRESE CORREO ELECTRONICO"
            android:textColor="@color/purple_text"
            android:layout_marginTop="250dp"
            android:layout_marginStart="30dp"
            >
        </TextView>

        <EditText
            android:id="@+id/edtemailrecup"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/edt_line"
            android:textColorHint="@color/purple_text" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGRESE NUMERO DE CELULAR"
            android:textColor="@color/purple_text"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"
            >
        </TextView>

        <EditText
            android:id="@+id/edtcelrecup"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/edt_line"
            android:textColorHint="@color/purple_text" />

        <Button
            android:id="@+id/btnRecuperarPass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_bg"
            android:text="ENVIAR CODIGO"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>