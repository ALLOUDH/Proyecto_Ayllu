<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_decolorated"
    tools:context=".Ay_up_images">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/top_background"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:background="@drawable/logoalaternativo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="Registrar un Problema"
            android:textColor="@color/white"
            android:textSize="23dp"
            ></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="AÑADIR IMAGEN"
                    android:textSize="24sp"
                    android:textColor="@color/purple_text">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    >
                    <ImageButton
                        android:id="@+id/btnAñadirImagenes1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/add_icon">
                    </ImageButton>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/subirimagen"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:layout_marginLeft="60dp">
                    <ImageButton
                        android:id="@+id/btnAñadirImagenes2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/add_icon">
                    </ImageButton>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:padding="50dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btnAñadirImagenes3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/add_icon">
                    </ImageButton>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:layout_marginLeft="60dp">
                    <ImageButton
                        android:id="@+id/btnAñadirImagenes4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/add_icon">
                    </ImageButton>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="90dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btnRegistrarProblema"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/btn_bg"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    android:textSize="18dp"></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>